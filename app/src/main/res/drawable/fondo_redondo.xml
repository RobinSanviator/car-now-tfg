<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Capa de sombra -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#33000000"/> <!-- Sombra negra semitransparente -->
            <corners android:radius="24dp"/>
        </shape>
    </item>

    <!-- Capa de fondo con color_principal_variante -->
    <item android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_principal_variante" />
            <corners android:radius="24dp"/>
        </shape>
    </item>

</layer-list>
